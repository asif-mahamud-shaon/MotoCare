{
  "info": {
    "name": "MotoCare API",
    "description": "Complete API collection for MotoCare automotive marketplace",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.collectionVariables.set('token', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Cars",
      "item": [
        {
          "name": "Get All Cars",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/cars?page=1&limit=12&approved=true",
              "host": ["{{baseUrl}}"],
              "path": ["cars"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "12"
                },
                {
                  "key": "approved",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Cars with Filters",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/cars?brand=BMW&condition=NEW&minPrice=50000&maxPrice=100000&year=2023",
              "host": ["{{baseUrl}}"],
              "path": ["cars"],
              "query": [
                {
                  "key": "brand",
                  "value": "BMW"
                },
                {
                  "key": "condition",
                  "value": "NEW"
                },
                {
                  "key": "minPrice",
                  "value": "50000"
                },
                {
                  "key": "maxPrice",
                  "value": "100000"
                },
                {
                  "key": "year",
                  "value": "2023"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Car",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/cars/:id",
              "host": ["{{baseUrl}}"],
              "path": ["cars", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "car_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Create Car",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "brand",
                  "value": "BMW",
                  "type": "text"
                },
                {
                  "key": "model",
                  "value": "X5",
                  "type": "text"
                },
                {
                  "key": "year",
                  "value": "2023",
                  "type": "text"
                },
                {
                  "key": "condition",
                  "value": "NEW",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "75000",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Luxury SUV with premium features",
                  "type": "text"
                },
                {
                  "key": "images",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/cars",
              "host": ["{{baseUrl}}"],
              "path": ["cars"]
            }
          }
        },
        {
          "name": "Update Car",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "price",
                  "value": "80000",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Updated description",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/cars/:id",
              "host": ["{{baseUrl}}"],
              "path": ["cars", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "car_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Car",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cars/:id",
              "host": ["{{baseUrl}}"],
              "path": ["cars", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "car_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Get My Cars",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cars/user/my-cars?page=1&limit=12",
              "host": ["{{baseUrl}}"],
              "path": ["cars", "user", "my-cars"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "12"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Gallery",
      "item": [
        {
          "name": "Get Gallery Images",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/gallery?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["gallery"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Upload Gallery Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "carId",
                  "value": "car_id_here",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/gallery",
              "host": ["{{baseUrl}}"],
              "path": ["gallery"]
            }
          }
        },
        {
          "name": "Delete Gallery Image",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/gallery/:id",
              "host": ["{{baseUrl}}"],
              "path": ["gallery", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "gallery_id_here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get Admin Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "stats"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Cars (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/cars?page=1&limit=20&approved=false",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "cars"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "approved",
                  "value": "false"
                }
              ]
            }
          }
        },
        {
          "name": "Approve Car",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"approved\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/cars/:id/approve",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "cars", ":id", "approve"],
              "variable": [
                {
                  "key": "id",
                  "value": "car_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users/:id",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "user_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Car (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/cars/:id",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "cars", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "car_id_here"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
